###############################################################################
# General
###############################################################################

# zsh
alias zshconfig="nvim $ZDOTDIR/.zshrc"

# show path
alias trail="<<<'${(F)path}'"

# exa
alias ls="command exa -laFh --git --group-directories-first"
alias lst="command exa -laFh --git --tree --level=2 --group-directories-first"
alias exa="command exa -laFh --git --group-directories-first"

# trash-cli
alias rm=trash

# neovim
alias vi="nvim"
alias vim="nvim"

# Temporary fix for Karabiner when it doesn't work after going to sleep.
# TODO: Remove once the issue is fixed:
# https://github.com/pqrs-org/Karabiner-Elements/issues/3078
# .zshrc file
alias rk="sudo pkill karabiner_console_user_server"

